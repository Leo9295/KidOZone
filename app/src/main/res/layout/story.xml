<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/boys">


    <Button
        android:id="@+id/fitIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="464dp"
        android:background="@android:color/transparent"
        android:text="Wanting to fit in"
        android:textColor="@android:color/holo_blue_dark" />

    <Button
        android:id="@+id/makefriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="394dp"
        android:background="@android:color/transparent"
        android:text="Making friends"
        android:textColor="@android:color/holo_purple" />

    <Button
        android:id="@+id/packageLunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="328dp"
        android:background="@android:color/transparent"
        android:text="package your lunchbox"
        android:textColor="@android:color/holo_blue_bright" />

    <Button
        android:id="@+id/nobullying"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="258dp"
        android:background="@android:color/transparent"
        android:text="Say No to Bullying"
        android:textColor="@android:color/holo_orange_light" />

    <Button
        android:id="@+id/stay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="193dp"
        android:background="@android:color/transparent"
        android:text="Stay in Safe"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/ask"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="121dp"
        android:background="@android:color/transparent"
        android:text="Asking for Help"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_red_light" />


</RelativeLayout>